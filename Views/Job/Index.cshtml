@using JobBoard.Models;

<h1>Job Listing</h1>
<ul>
@if (Model.Count == 0)
{
  <p>You have no jobs in your list!</p>
}
@if(Model.Count != 0)
{
  foreach (Job job in Model)
  {
    <li> 
       Position - @job.GetPosition()  <br>
       Description - @job.GetDescription()  <br>
       Salary - @job.GetSalary()  <br>
       Contact - @job.GetContact()   <br>
    </li>
    <br>
    
  }

  
}

</ul>
<a href="/jobs/new">Add a new job list.</a>


